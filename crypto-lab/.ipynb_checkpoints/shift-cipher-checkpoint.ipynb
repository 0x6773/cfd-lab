   "source": [
    "def cipher(p, K):\n",
    "    x = list(map(lambda a: ord(a) - ord('a'), p))\n",
    "    y = list(map(lambda a: a + K, x))\n",
    "    C = \"\".join(map(lambda a: chr(a + ord('A')), y))\n",
    "    return C"
   ]
  },
